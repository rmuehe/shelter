<%= form_with model: [ @user, @user.requests.build ] do |f| %>
<div class="field">
  <%= f.label "Providers" %><br />
  <%= f.collection_check_boxes :provider_ids, Provider.all, :id, :name do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>
</div> 
  <%= button_to "Request a Reservation", user_create_request_path(@user), 
                method: "post",
                type: "submit",
                class: "btn btn-primary" %>
<% end %>
