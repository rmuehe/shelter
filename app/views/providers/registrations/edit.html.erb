<% if current_provider.id == params[:format].to_i %>

  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "providers/shared/error_messages", resource: resource %>

    <div class="field">    <%= f.label :name %><br>
      <%= f.text_field :name %>
      <% resource.errors.full_messages_for(:name).each do |message| %>
        <div style="color: red"><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :summary %><br>
      <%= f.text_area :summary %><br>
      <% resource.errors.full_messages_for(:summary).each do |message| %>
        <div style="color: red"><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
      <% resource.errors.full_messages_for(:phone).each do |message| %>
        <div style="color: red"><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :website %><br>
      <%= f.text_field :website %>
      <% resource.errors.full_messages_for(:website).each do |message| %>
        <div style="color: red"><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :serving, "Populations Served" %><br>
      <%= f.text_field :serving %>
      <% resource.errors.full_messages_for(:serving).each do |message| %>
        <div style="color: red"><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

<% else %>

  <% if provider_signed_in? %> 
    <em> Not authorized, <%= current_provider.name %> </em><br>
  <% else %>
    <em> Not authorized, <%= current_user.username %> </em><br>
  <% end %> <br><br>

  <%= link_to "Back", :back %>

<% end %>