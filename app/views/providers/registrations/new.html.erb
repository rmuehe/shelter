<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "providers/shared/error_messages", resource: resource %>
  
  <div class="field">    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <% @provider.errors.full_messages_for(:name).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary %><br>
    <% @provider.errors.full_messages_for(:summary).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
    <% @provider.errors.full_messages_for(:phone).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website %>
    <% @provider.errors.full_messages_for(:website).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :serving, "Populations Served" %><br>
    <%= f.text_field :serving %>
    <% @provider.errors.full_messages_for(:serving).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "providers/shared/links" %>
